{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hosting Provider",
  "type": "object",
  "properties": {
    "company": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "urlHomepage": {
          "type": "string",
          "format": "uri"
        },
        "urlPrivacyPolicy": {
          "type": "string",
          "format": "uri"
        },
        "urlTermsConditions": {
          "type": "string",
          "format": "uri"
        },
        "urlContentPolicy": {
          "type": "string",
          "format": "uri"
        },
        "urlWordpressFiveForTheFuture": {
          "type": "string",
          "format": "uri"
        },
        "wordpressContributor": {
          "type": "boolean"
        },
        "urlOpenSourceProjects": {
          "type": "string",
          "format": "uri"
        },
        "paymentOptions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "none",
              "credit-card",
              "paypal",
              "crypto",
              "bank-transfer",
              "trial",
              "other"
            ]
          }
        },
				"users": {
					"type": "object",
					"properties": {
						"wordpressOrgUsername": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Your WordPress.org username associated with the company."
						},
						"companyEmployees": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "WordPress.org username associated with the company."
						},
						"hostingTestBotName": {
							"type": "string",
							"description": "The name of the bot used by the hosting test tool."
						}
					},
					"required": ["wordpressOrgUsernames", "companyEmployees", "hostingTestBotName"]
				}
      },
      "required": [
        "name",
        "urlHomepage",
        "urlPrivacyPolicy",
        "urlTermsConditions",
        "wordpressContributor"
      ]
    },
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "shared",
              "vps",
              "cloud",
              "dedicated",
              "managed",
              "reseller",
              "wordpress",
              "other"
            ]
          },
          "management": {
            "type": "string",
            "enum": [
              "managed",
              "unmanaged"
            ]
          },
          "urlProduct": {
            "type": "string",
            "format": "uri"
          },
          "controlPanel": {
            "type": "string",
            "enum": [
              "none",
              "plesk",
              "cpanel",
              "directadmin",
              "virtualmin",
              "ispconfig",
              "ajenti",
              "vesta",
              "froxlor",
              "sentora",
              "interworx",
              "centos",
              "aapanel",
              "cloudpanel",
              "hestia",
              "own-panel"
            ]
          },
          "price": {
            "type": "string",
            "enum": [
              "$",
              "$$",
              "$$$",
              "$$$$",
              "$$$$$"
            ]
          },
          "security": {
            "type": "object",
            "properties": {
              "securityCertificate": {
                "type": "boolean"
              },
              "certificateType": {
                "type": "string",
                "enum": [
                  "letsencrypt",
                  "other"
                ]
              },
              "tlsVersions": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "1.0",
                    "1.1",
                    "1.2",
                    "1.3"
                  ]
                }
              },
              "hsts": {
                "type": "boolean"
              },
              "detectionTools": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "none",
                    "patchstack",
                    "wordfence",
                    "wpscan",
                    "wpvulnerability",
                    "others"
                  ]
                }
              },
							"firewallOptions": {
								"type": "array",
								"items": {
									"type": "string",
									"enum": ["none", "ufw", "iptables", "firewalld", "nftables", "cisco-asa", "palo-alto", "other"]
								}
							},
              "malwareScanning": {
                "type": "boolean"
              },
							"intrusionDetectionSystem": {
								"type": "object",
								"properties": {
									"enabled": { "type": "boolean" },
									"type": {
										"type": "string",
										"enum": ["none", "snort", "suricata", "ossec", "other"]
									}
								}
							}
            },
            "required": [
              "securityCertificate",
              "certificateType",
              "tlsVersions",
              "hsts",
              "detectionTools",
							"firewallOptions",
							"malwareScanning",
							"intrusionDetectionSystem"
            ]
          },
          "environment": {},
          "sustainability": {
            "type": "object",
            "properties": {
              "energySource": {
                "type": "string"
              },
              "carbonNeutrality": {
                "type": "boolean"
              }
            }
          },
          "performance": {
            "type": "object",
            "properties": {
              "averageUptime": {
                "type": "string"
              },
              "pageLoadSpeed": {
                "type": "string"
              }
            }
          }
        },
        "required": [
          "name",
          "type",
          "management",
          "urlProduct",
          "controlPanel",
          "price",
          "security",
          "environment"
        ]
      }
    }
  },
  "required": [
    "company",
    "products"
  ]
}